generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id String @id @unique @default(uuid())
  name String
  email String @unique
  password String
  
  role userRoles @default(User)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  client Clients[]
  @@map("users")
}
model Clients {
  client_id String @id @unique @default(uuid())
  userId String
  name String
  email String
  phone String
  company String?
  notes String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user User @relation(fields: [userId], references: [id])
  projects Projects[]
  @@map("clients")
}

model Projects {
  project_id String @id @unique @default(uuid())
  client_id String
  title String
  budget Float
  deadline DateTime
  status ProjectStatus
  client Clients @relation(fields: [client_id],references: [client_id])
  @@map("projects")
}

// other can be added later
enum userRoles {
  User
  
 
}

enum ProjectStatus {
  DRAFT
  PROPOSAL_SENT
  NEGOTIATION
  IN_PROGRESS
  WAITING_ON_CLIENT
  ON_HOLD
  COMPLETED
  CANCELLED
}

